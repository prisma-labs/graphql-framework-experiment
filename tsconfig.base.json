{
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "importHelpers": true,
    "module": "commonjs",
    "esModuleInterop": true,
    // HACK see readme for details
    // "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "target": "es2017"
  }
}
