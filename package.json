{
  "name": "graphql-santa",
  "author": "Prisma Labs",
  "version": "0.1.2",
  "homepage": "https://github.com/prisma-labs/graphql-santa",
  "repository": "prisma-labs/graphql-santa",
  "bugs": "https://github.com/prisma-labs/graphql-santa/issues",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "/dist",
    "/src"
  ],
  "bin": {
    "graphql-santa": "dist/cli/index.js",
    "santa": "dist/cli/index.js"
  },
  "dependencies": {
    "apollo-server-express": "^2.9.11",
    "arg": "^4.1.1",
    "chalk": "^3.0.0",
    "chokidar": "^3.3.0",
    "codename": "^0.0.6",
    "common-tags": "^1.8.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "fs-jetpack": "^2.2.3",
    "graphql": "^14.5.8",
    "ink": "^2.5.0",
    "ink-select-input": "^3.1.2",
    "nexus": "^0.12.0-rc.5",
    "prompts": "^2.3.0",
    "react": "^16.12.0",
    "simple-git": "^1.126.0",
    "tree-kill": "^1.2.1",
    "ts-node": "^8.5.0",
    "tsconfig": "^7.0.0",
    "tslib": "^1",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@types/chai": "4.2.7",
    "@types/common-tags": "1.8.0",
    "@types/debug": "4.1.5",
    "@types/dotenv": "8.2.0",
    "@types/jest": "24.0.25",
    "@types/node": "12.12.24",
    "@types/node-fetch": "2.5.4",
    "@types/prompts": "2.0.3",
    "@types/react": "16.9.17",
    "chai": "4.2.0",
    "doctoc": "1.4.0",
    "globby": "10.0.2",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "strip-ansi": "6.0.0",
    "ts-jest": "24.2.0",
    "type-fest": "0.8.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "scripts": {
    "publish:stable": "[ \"$(git rev-parse --abbrev-ref HEAD)\" = \"master\" ] && yarn publish --tag latest && git push && git push --tags",
    "publish:master": "[ \"$(git rev-parse --abbrev-ref HEAD)\" = \"master\" ] && yarn publish --tag master --no-git-tag-version --new-version \"0.0.0-master.$(git show -s head --format='%h')\" && git commit -am 'chore: version' && git push && git push --tags",
    "publish:sha": "yarn publish --tag sha --no-git-tag-version --new-version \"0.0.0-sha.$(git show -s head --format='%h')\"",
    "publish:pr": "PR=$(hub pr show -f '%I') && yarn publish --tag pr.${PR} --no-git-tag-version --new-version \"0.0.0-pr.${PR}.$(git show -s head --format='%h')\" && git commit -am 'ver' && git push",
    "format": "prettier --write '*/**/*.ts'",
    "build": "yarn -s clean && tsc -b",
    "build:doc": "doctoc README.md --notitle --maxlevel 3",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "postpublish": "yarn -s clean",
    "prepublishOnly": "yarn -s build",
    "test": "jest --verbose --testTimeout 120000",
    "test:dev": "jest --watch --verbose --testTimeout 120000",
    "dev": "tsc -b -w"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
