{
  "name": "graphql-santa",
  "author": "Prisma Labs",
  "version": "0.1.2",
  "homepage": "https://github.com/prisma-labs/graphql-santa",
  "repository": "prisma-labs/graphql-santa",
  "bugs": "https://github.com/prisma-labs/graphql-santa/issues",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "/dist",
    "/src",
    "testing.d.ts",
    "testing.js"
  ],
  "bin": {
    "graphql-santa": "dist/cli/index.js",
    "santa": "dist/cli/index.js"
  },
  "dependencies": {
    "@types/debug": "^4.1.5",
    "@types/pino": "^5.15.1",
    "anymatch": "^3.1.1",
    "apollo-server-express": "^2.9.11",
    "arg": "^4.1.1",
    "chalk": "^3.0.0",
    "chokidar": "^3.3.0",
    "codename": "^0.0.6",
    "common-tags": "^1.8.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "fs-jetpack": "^2.2.3",
    "get-port": "^5.1.0",
    "graphql": "^14.5.8",
    "graphql-request": "^1.8.2",
    "lodash": "^4.17.15",
    "nexus": "^0.12.0-rc.5",
    "pino": "^5.15.0",
    "prompts": "^2.3.0",
    "simple-git": "^1.126.0",
    "tree-kill": "^1.2.1",
    "ts-node": "^8.5.0",
    "tsconfig": "^7.0.0",
    "tslib": "^1",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@types/anymatch": "1.3.1",
    "@types/common-tags": "1.8.0",
    "@types/dotenv": "8.2.0",
    "@types/jest": "24.9.0",
    "@types/lodash": "4.14.149",
    "@types/node": "12.12.24",
    "@types/prompts": "2.0.3",
    "doctoc": "1.4.0",
    "dripip": "0.2.9",
    "husky": "4.0.10",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "strip-ansi": "6.0.0",
    "ts-jest": "24.3.0",
    "type-fest": "0.8.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "scripts": {
    "docs:dev": "docsify serve docs",
    "release:stable": "dripip stable",
    "release:preview": "dripip preview",
    "publish:pr": "PR=$(hub pr show -f '%I') && yarn publish --tag pr.${PR} --no-git-tag-version --new-version \"0.0.0-pr.${PR}.$(git show -s head --format='%h')\" && git commit -am 'ver' && git push",
    "format": "prettier --write '*/**/*.ts'",
    "build": "yarn -s clean && tsc -b",
    "docs:readme:build": "doctoc README.md --notitle --maxlevel 3",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "postpublish": "yarn -s clean",
    "prepublishOnly": "yarn -s build",
    "test": "jest --verbose --testTimeout 120000",
    "test:integration": "jest --verbose --testRegex '.+/integration/.+\\.spec\\.ts$'",
    "test:unit": "jest --verbose --testRegex '.+/src/.+\\.spec\\.ts$'",
    "dev:test": "jest --watch --verbose --testRegex '.+/src/.+\\.spec\\.ts$'",
    "dev": "tsc -b -w"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
