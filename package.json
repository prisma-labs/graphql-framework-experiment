{
  "name": "nexus-future",
  "author": "Prisma Labs",
  "version": "0.0.0-dripip",
  "homepage": "https://github.com/graphql-nexus/nexus-future",
  "repository": "graphql-nexus/nexus-future",
  "bugs": "https://github.com/graphql-nexus/nexus-future/issues",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "/dist",
    "README.md",
    "yarn.lock",
    "testing.d.ts",
    "testing.js",
    "plugin.d.ts",
    "plugin.js"
  ],
  "bin": {
    "nexus": "dist/cli/main.js"
  },
  "dependencies": {
    "@nexus/schema": "^0.12.0-rc.13",
    "@types/express": "^4.17.2",
    "@types/node-fetch": "^2.5.5",
    "@types/pino": "^5.15.5",
    "@types/prompts": "^2.0.3",
    "anymatch": "^3.1.1",
    "arg": "^4.1.3",
    "chalk": "^3.0.0",
    "chokidar": "^3.3.0",
    "codename": "^0.0.6",
    "common-tags": "^1.8.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "fs-jetpack": "^2.2.3",
    "get-port": "^5.1.0",
    "graphql": "^14.5.8",
    "lodash": "^4.17.15",
    "node-fetch": "^2.6.0",
    "pino": "^5.15.0",
    "prompts": "^2.3.0",
    "simple-git": "^1.126.0",
    "strip-ansi": "^6.0.0",
    "ts-node": "^8.5.0",
    "tsconfig": "^7.0.0",
    "tslib": "^1",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@types/anymatch": "1.3.1",
    "@types/common-tags": "1.8.0",
    "@types/jest": "25.1.3",
    "@types/lodash": "4.14.149",
    "@types/node": "13.7.7",
    "doctoc": "1.4.0",
    "dripip": "^0.8.0",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "node-pty": "^0.9.0",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "ts-jest": "25.2.1",
    "ts-morph": "^7.0.0",
    "type-fest": "0.11.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "scripts": {
    "dev:docs": "docsify serve docs",
    "docs:dev": "docsify serve docs",
    "docs:readme:build": "doctoc README.md --notitle --maxlevel 3",
    "docs:deploy": "now --prod",
    "release:stable": "dripip stable",
    "release:preview": "dripip preview",
    "release:pr": "dripip pr",
    "format": "prettier --write '*/**/*.ts'",
    "build": "yarn -s clean && tsc -b && node scripts/fix-cli-main",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "postpublish": "yarn -s clean",
    "prepublishOnly": "yarn -s build",
    "test": "jest --verbose --testTimeout 120000",
    "test:integration": "jest --verbose --testRegex '.+/integration/.+\\.spec\\.ts$'",
    "test:unit": "node --experimental-worker node_modules/.bin/jest --verbose --testRegex '.+/src/.+\\.spec\\.ts$'",
    "test:e2e": "jest --verbose --testTimeout 60000 test/e2e",
    "test:system": "jest --verbose --testTimeout 60000 test/system",
    "dev:test": "jest --watch --testRegex '.+/src/.+\\.spec\\.ts$'",
    "dev": "tsc -b -w"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
